<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/add_to_the_cart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/add_shopping_cart" />
    <TextView
        android:id="@+id/tv_add_to_the_cart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/custom_notification_shap"
        android:layout_above="@+id/add_to_the_cart"
        android:layout_toRightOf="@id/add_to_the_cart"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="-15dp"
        android:text="9"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/green"
        android:textSize="10dp"
        android:padding="4dp"
        tools:ignore="TextViewEdits" />
</RelativeLayout>