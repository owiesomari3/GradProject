<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:id="@+id/layout"
    android:background="@drawable/custome_diloge">
    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|end"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_clear_24"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/img_dia"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logoai" />

    <LinearLayout
        android:layout_marginTop="0dp"
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_dia"
        android:orientation="vertical">



        <TextView
            android:id="@+id/messageDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/chose_the_type_of_account"
            android:textColor="@color/green"
            android:textSize= "@dimen/size_text_small"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/reg_chef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:text="@string/chef"
                android:textColor="@color/green"
                android:textSize="@dimen/size_text_small"
                android:textStyle="bold" />

            <RadioButton
                android:layout_marginTop="10dp"
                android:id="@+id/reg_hungry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/hungry"
                android:textColor="@color/green"
                android:textSize="@dimen/size_text_small"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>



